<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div id="templatemo_header_wrapper">
        <div id="templatemo_header">
            <div id="site_title">@Html.ActionLink("Запитання", "Index", "Home")</div>

            <div id="templatemo_menu" class="ddsmoothmenu">
                <ul>
                    <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                    <li>@Html.ActionLink("Замовлення", "Index", "Order")</li>
                    <li>@Html.ActionLink("Типи квитків", "Index", "Ticket")</li>
                    <li>@Html.ActionLink("Студенти", "Index", "Person")</li>
                    <li>@Html.ActionLink("Ціни", "Index", "Price")</li>
                    <li>@Html.ActionLink("Типи транспорту", "Index", "Type")</li>
                    <li>@Html.ActionLink("Кількість поїздок", "Index", "Rate")</li>
                </ul>
                <br style="clear: left" />
            </div> <!-- end of templatemo_menu -->
        </div> <!-- END of templatemo_header -->


    </div> <!-- END of templatemo_header_wrapper -->
    <!--
     <div id="templatemo_header_wrapper_down">
         <div id="templatemo_header_down">
             <div id="templatemo_menu" class="ddsmoothmenu">
             </div>
         </div>
     </div>
    -->
    <div id="templatemo_main_wrapper">
        <div id="templatemo_main">
        </div>
    </div>


    <div id="templatemo_main_wrapper">
        <div id="templatemo_main">

            @RenderBody()
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
            <div class="cleaner"></div>
        </div> <!-- END of templatemo_main_wrapper -->
    </div> <!-- END of templatemo_main -->
    <br>
    <br><br><br><br><br><br><br><br><br>
    <div id="templatemo_footer_wrapper">
        <div id="templatemo_footer">
            <p>Вітаємо Вас на сайті, де ви можете замовити прроїзні та отримати інформацію по замовлення.</p>
            <p>Підготував Кисилевський Андрій</p>
        </div> <!-- END of templatemo_footer -->
    </div> <!-- END of templatemo_footer_wrapper -->





</body>
</html>
